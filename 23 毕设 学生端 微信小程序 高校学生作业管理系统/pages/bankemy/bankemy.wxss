page{
  background: #797474;
}
.remind{
  flex: 1;
  width: 100%;
  display: flex;
  padding: 20rpx;
  /* 内容垂直居中 */
  align-items: center;
  color: white;
  /* 距离上方20rpx 营造list之间分格 间距效果*/
  margin-top: 50rpx;
  /* 容器布局 左右两侧 */
  justify-content: center; 
}

.list {
  flex: 1;
  width: 100%;
  display: flex;
  padding: 20rpx;
  /* 内容垂直居中 */
  align-items: center;
  background: rgba(0, 0, 0, 0.26);
  /* 距离上方20rpx 营造list之间分格 间距效果*/
  margin-top: 50rpx;
  /* 容器布局 左右两侧 */
  justify-content: space-between; 



}
